<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Filtered Students</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<style>
    .filtered-table-container {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 8px 32px rgba(41,128,185,0.10);
  padding: 2.5rem 2rem;
  max-width: 1200px;
  margin: 40px auto;
}

.filtered-title {
  font-size: 2.2rem;
  color: #185a9d;
  font-weight: bold;
  margin-bottom: 1rem;
  letter-spacing: 1px;
  text-align: center;
}

.filtered-info {
  font-size: 1.1rem;
  color: #185a9d;
  margin-bottom: 1.5rem;
  text-align: center;
}

.back-btn {
  background: #185a9d;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 0.6rem 1.2rem;
  font-size: 1rem;
  cursor: pointer;
  margin-bottom: 1rem;
  display: inline-block;
  text-decoration: none;
}

.back-btn:hover {
  background: #43cea2;
}

.status-table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 1rem;
  background: #f8fafd;
  border-radius: 10px;
  overflow: hidden;
}

.status-table th, .status-table td {
  border: 1px solid #43cea2;
  padding: 0.8rem 0.5rem;
  text-align: center;
  font-size: 0.9rem;
}

.status-table th {
  background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%);
  color: #fff;
  font-weight: bold;
  letter-spacing: 1px;
}

.status-table tr:nth-child(even) {
  background: #eafaf1;
}

.status-table tr:hover {
  background: #d0f0e6;
  transition: background 0.2s;
}

.status-approved {
  color: #27ae60;
  font-weight: bold;
  background: #d5f4e6;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.8rem;
  margin: 1px;
  display: inline-block;
}

.status-rejected {
  color: #e74c3c;
  font-weight: bold;
  background: #fadbd8;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.8rem;
  margin: 1px;
  display: inline-block;
}

.status-pending {
  color: #f39c12;
  font-weight: bold;
  background: #fef9e7;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.8rem;
  margin: 1px;
  display: inline-block;
}

.delete-btn {
  background: #e74c3c;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 4px 12px;
  cursor: pointer;
  font-size: 0.8rem;
}

.delete-btn:hover {
  background: #c0392b;
}

.status-summary {
  font-size: 0.8rem;
  color: #666;
  margin-top: 5px;
}
</style>
<body>
  <div class="filtered-table-container">
    <a href="/adminDashboard" class="back-btn">‚Üê Back to Dashboard</a>
    <div class="filtered-title">Filtered Students</div>
    <div class="filtered-info">
      <b>Branch:</b> <%= branch || "All" %> &nbsp;|&nbsp;
      <b>Year:</b> <%= year || "All" %> &nbsp;|&nbsp;
      <b>Section:</b> <%= section || "All" %>
    </div>
    <table class="status-table">
      <tr>
        <th>Name</th>
        <th>Enrolment</th>
        <th>Branch</th>
        <th>Year</th>
        <th>Section</th>
        <th>Status</th>
        <th>Delete</th>
      </tr>
      <% if (students && students.length > 0) { %>
        <% students.forEach(function(student) { %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.enrolment %></td>
            <td><%= student.branch %></td>
            <td><%= student.year %></td>
            <td><%= student.section %></td>
            <td>
              <% if (student.approvals && student.approvals.length > 0) { %>
                <% student.approvals.forEach(function(approval) { %>
                  <div class="<%= approval.status === 'Approved' ? 'status-approved' : (approval.status === 'Rejected' ? 'status-rejected' : 'status-pending') %>">
                    <%= approval.teacherName %>: <%= approval.status %>
                  </div>
                <% }) %>
                <div class="status-summary">
                  <%= student.approvals.filter(a => a.status === 'Approved').length %> approved, 
                  <%= student.approvals.filter(a => a.status === 'Rejected').length %> rejected
                </div>
              <% } else { %>
                <span class="status-pending">No approvals yet</span>
              <% } %>
            </td>
            <td>
              <form method="POST" action="/admin/delete-student" style="display:inline;">
                <input type="hidden" name="studentId" value="<%= student.id %>">
                <input type="hidden" name="branch" value="<%= student.branch %>">
                <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7"><i>No students found for this filter.</i></td>
        </tr>
      <% } %>
    </table>
  </div>
</body>
</html>
